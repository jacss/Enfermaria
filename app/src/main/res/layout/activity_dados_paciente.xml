<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1d3d2"
    tools:context=".DadosPaciente">

    <TextView
        android:id="@+id/textNome_Id"
        android:layout_width="231dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="31dp"
        android:background="@color/backTexto"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textNome_Id"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:text="PACIENTE:" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="72dp"
        android:text="LEITO:" />

    <TextView
        android:id="@+id/textLeito_Id"
        android:layout_width="81dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/textPressao_Id"
        android:background="@color/backTexto" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="109dp"
        android:text="PRES.ARTERIAL:" />

    <TextView
        android:id="@+id/textPressao_Id"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/textCardiaco_Id"
        android:background="@color/backTexto" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="146dp"
        android:text="BAT.CARDÍACO:" />

    <TextView
        android:id="@+id/textCardiaco_Id"
        android:layout_width="78dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/textCorporal_Id"
        android:background="@color/backTexto" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="180dp"
        android:text="TEMP.CORPORAL:" />

    <TextView
        android:id="@+id/textCorporal_Id"
        android:layout_width="79dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="140dp"
        android:background="@color/backTexto" />
</RelativeLayout>